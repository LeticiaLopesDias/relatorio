issn = {00063207},
journal = {Biological Conservation},
keywords = {Amazon,Biodiversity conservation,Deforestation,National parks,PADDD,Tropical forest},
pages = {32--39},
publisher = {Elsevier Ltd},
title = {{Protected Area Downgrading, Downsizing, and Degazettement (PADDD) in the Amazon}},
