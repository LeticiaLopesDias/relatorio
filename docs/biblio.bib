keywords = {Conservation impacts,Deforestation,Land cover,Matching,Protected areas,REDD},
number = {1712},
pages = {1633--1638},
title = {{Global protected area impacts}},
volume = {278},
year = {2011}
}
@article{Shah2021,
abstract = {More than 15% of global terrestrial area is under some form of protection and there is a growing impetus to increase this coverage to 30% by 2030. But not all protection is effective and the reasons some countries' protected areas are more effective than others' are poorly understood. We evaluate the effectiveness of national protected area networks established between 2000 and 2012 globally in avoiding forest loss, taking into account underlying deforestation threats using a combination of matching methods and cross-sectional regressions. We then assess which demographic, agricultural, economic, and governance factors are most strongly associated with national protected area effectiveness using machine learning methods. We estimate that national protected areas established between 2000 and 2012 reduced deforestation in those areas by 72%, avoiding 86,062 square kilometers of forest loss. The effectiveness of national protected areas varied by strictness of protection based on IUCN category. Strictly protected areas reduced forest loss by 81% compared to what would have occurred without protection, while less strictly protected areas reduced forest loss by 67%. Thus, the 26% of new protected areas that were strictly protected contributed 39% of the total forest loss avoided within protected areas between 2000 and 2012. If every country's protected areas were as effective as the country with the most effective protected areas within the same region, they would have increased the area of deforestation avoided by 38%, saving a further 119,082 square kilometers of forest. Part of the variation in protected area effectiveness across countries is explained by the placement of protected area in areas facing higher deforestation threat. Countries with lower agricultural activity, higher economic growth},
